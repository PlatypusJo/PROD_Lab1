<Window x:Class="Lab1.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer>
            <Grid Grid.Column="0"
                  Margin="5,0"
                  Background="White">
                <StackPanel Margin="10" 
                            Orientation="Vertical">
                    <TextBlock FontFamily="Arial" 
                               FontSize="20"
                               Text="Определение границ"
                               HorizontalAlignment="Center" 
                               Margin="0,10"/>

                    <Border BorderBrush="DarkCyan" BorderThickness="1" Padding="5,0" Margin="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                   FontFamily="Arial" FontSize="20"
                                   Text="A"
                                   HorizontalAlignment="Left" Margin="0,10"/>
                            <TextBox Grid.Row="0" 
                                 Grid.Column="1" 
                                 Margin="0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                   FontFamily="Arial" FontSize="20"
                                   Text="AA"
                                   HorizontalAlignment="Left" Margin="0,10"/>
                            <TextBox Grid.Row="1"
                                 Grid.Column="1" 
                                 Margin="0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                   FontFamily="Arial" FontSize="20"
                                   Text="B"
                                   HorizontalAlignment="Left" Margin="0,10"/>
                            <TextBox Grid.Row="2" 
                                 Grid.Column="1" 
                                 Margin="0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                   FontFamily="Arial" FontSize="20"
                                   Text="BB"
                                   HorizontalAlignment="Left" Margin="0,10"/>
                            <TextBox Grid.Row="3" 
                                 Grid.Column="1" 
                                 Margin="0,10"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                   FontFamily="Arial" FontSize="20"
                                   Text="C"
                                   HorizontalAlignment="Left" Margin="0,10"/>
                            <TextBox Grid.Row="4"
                                 Grid.Column="1" 
                                 Margin="0,10"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" 
                                   FontFamily="Arial" FontSize="20"
                                   Text="CC"
                                   HorizontalAlignment="Left" Margin="0,10"/>
                            <TextBox Grid.Row="5" 
                                 Grid.Column="1" 
                                 Margin="0,10"/>
                        </Grid>
                    </Border>
                    
                    <TextBlock  FontFamily="Arial" FontSize="20"
                                Text="Размеры"
                                HorizontalAlignment="Center" Margin="0,10"/>

                    <Border BorderBrush="DarkCyan" BorderThickness="1" Padding="5,0" Margin="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       FontFamily="Arial" FontSize="20"
                                       Text="iActualSize"
                                       HorizontalAlignment="Left" Margin="0,10"/>
                            <TextBox Grid.Row="0" 
                                     Grid.Column="1" 
                                     Margin="0,10" 
                                     Text="{Binding IParallepipedSize, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                           FontFamily="Arial" FontSize="20"
                           Text="jActualSize"
                           HorizontalAlignment="Left" Margin="0,10"/>
                            <TextBox Grid.Row="1"
                                     Grid.Column="1" 
                                     Margin="0,10" 
                                     Text="{Binding JParallepipedSize, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                           FontFamily="Arial" FontSize="20"
                           Text="kActualSize"
                           HorizontalAlignment="Left" Margin="0,10"/>
                            <TextBox Grid.Row="2" 
                                     Grid.Column="1" 
                                     Margin="0,10"
                                     Text="{Binding KParallepipedSize, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                        </Grid>
                    </Border>

                    <TextBlock  FontFamily="Arial" FontSize="20"
                    Text="Параметры"
                    HorizontalAlignment="Center" Margin="0,10"/>

                    <Border BorderBrush="DarkCyan" BorderThickness="1" Padding="5,0" Margin="0,5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           FontFamily="Arial" FontSize="20"
                                           Text="α"
                                           HorizontalAlignment="Left" Margin="0,10"/>
                                <TextBox Grid.Row="0" Grid.Column="1" 
                                         Margin="0,10" />

                                <TextBlock Grid.Row="1" Grid.Column="0" 
                               FontFamily="Arial" FontSize="20"
                               Text="τ"
                               HorizontalAlignment="Left" Margin="0,10"/>
                                <TextBox Grid.Row="1" Grid.Column="1" 
                             Margin="0,10" />

                                <TextBlock Grid.Row="2" Grid.Column="0" 
                               FontFamily="Arial" FontSize="20"
                               Text="h"
                               HorizontalAlignment="Left" Margin="0,10"/>
                                <TextBox Grid.Row="2" Grid.Column="1" 
                             Margin="0,10" />

                                <TextBlock Grid.Row="3" Grid.Column="0" 
                               FontFamily="Arial" FontSize="20"
                               Text="tMax"
                               HorizontalAlignment="Left" Margin="0,10"/>
                                <TextBox Grid.Row="3" Grid.Column="1" 
                             Margin="0,10" />
                            </Grid>
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <TextBlock  FontFamily="Arial" FontSize="20"
                                Text="(τ * α * α) / (h * h) &lt; 0.125"
                                HorizontalAlignment="Center" Margin="0,10"/>
                                <TextBlock  FontFamily="Arial" FontSize="20"
                                Text="(true)"
                                HorizontalAlignment="Center" Margin="10,10"/>
                            </StackPanel>

                        </Grid>
                    </Border>

                    <StackPanel Margin="0, 10"
                                Orientation="Horizontal">
                        <Button Width="200"
                                Height="50"
                                Content="Решить"
                                FontSize="20"/>
                    </StackPanel>
                    

                </StackPanel>
            </Grid>
        </ScrollViewer>
        
        <!--<Grid Grid.Column="1" Margin="15,10" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

            </Grid>
        </Grid>-->
    </Grid>
</Window>
